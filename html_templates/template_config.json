{
  "templateVersion": "1.0",
  "description": "Textami HTML Semantic Templates Configuration",
  "lastUpdated": "2025-08-30",
  
  "htmlVocabulary": {
    "h1": {
      "description": "Main document title",
      "wordStyles": ["Heading 1", "Title", "Heading1Char"],
      "cssClasses": [],
      "usage": "Document titles, main sections"
    },
    "h2": {
      "description": "Secondary headings",
      "wordStyles": ["Heading 2", "Subtitle", "Heading2Char"],
      "cssClasses": [],
      "usage": "Section titles, subsections"
    },
    "h3": {
      "description": "Tertiary headings", 
      "wordStyles": ["Heading 3", "Heading3Char"],
      "cssClasses": [],
      "usage": "Sub-subsections, detailed topics"
    },
    "p": {
      "description": "Standard paragraphs",
      "wordStyles": ["Normal", "DefaultParagraphFont"],
      "cssClasses": [],
      "usage": "Regular text content"
    },
    "p.BodyText": {
      "description": "Formatted body text",
      "wordStyles": ["Body Text", "BodyTextChar"],
      "cssClasses": ["BodyText"],
      "usage": "Main document content with indentation"
    },
    "ul.Bulleted": {
      "description": "Bullet point lists",
      "wordStyles": ["List Bullet", "ListBullet", "BulletList"],
      "cssClasses": ["Bulleted"],
      "usage": "Unordered lists, bullet points"
    },
    "ol.Numbered": {
      "description": "Numbered lists",
      "wordStyles": ["List Number", "ListNumber", "NumberedList"],
      "cssClasses": ["Numbered"],
      "usage": "Ordered lists, step-by-step procedures"
    },
    "table.StdTable": {
      "description": "Standard tables",
      "wordStyles": ["Table Grid", "TableGrid", "StandardTable"],
      "cssClasses": ["StdTable"],
      "usage": "Data tables, structured information"
    },
    "blockquote": {
      "description": "Quoted or highlighted text",
      "wordStyles": ["Quote", "BlockText", "IntenseQuote"],
      "cssClasses": [],
      "usage": "Quotes, callouts, highlighted information"
    }
  },
  
  "templateFiles": {
    "main": "body.html",
    "components": {
      "table": "components/table.html",
      "list": "components/list.html", 
      "paragraph": "components/paragraph.html"
    }
  },
  
  "defaultVariables": {
    "documentTitle": "Document Textami",
    "showHeader": true,
    "showFooter": true,
    "showMetadata": false,
    "showTimestamp": true,
    "generatedDate": "{{ new Date().toLocaleDateString('ca-ES') }}"
  },
  
  "styleMapping": {
    "priority": [
      "h1", "h2", "h3", 
      "p.BodyText", "p",
      "ul.Bulleted", "ol.Numbered",
      "table.StdTable", 
      "blockquote"
    ],
    "fallbacks": {
      "unknownParagraph": "p",
      "unknownList": "ul.Bulleted",
      "unknownTable": "table.StdTable"
    }
  },
  
  "integration": {
    "nunjucks": {
      "autoescape": true,
      "throwOnUndefined": false,
      "trimBlocks": true,
      "lstripBlocks": true
    },
    "docxtemplater": {
      "htmlModule": true,
      "styleMapping": "automatic",
      "preserveFormatting": true
    }
  },
  
  "validation": {
    "requiredElements": ["h1", "p"],
    "allowedTags": ["h1", "h2", "h3", "p", "ul", "ol", "li", "table", "thead", "tbody", "tr", "th", "td", "blockquote", "strong", "em"],
    "allowedClasses": ["BodyText", "Bulleted", "Numbered", "StdTable"]
  }
}